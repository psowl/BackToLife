
<div class ="categoriespage">
  
  <section class ="searchsection">

    <h1>I am looking for</h1>

    <form id="searchform" action="" method="GET">
      {{!-- <div class ="searchtypeinput"> --}}
        <input type="text" name="search" placeholder="Type here"></input>
      {{!-- </div> --}}

      {{!-- <div class ="searchselectcat">   --}}
        <select name="categories">
        <option value="">--Select a category if needed--</option>  
        {{#each cats}}
          <option value={{this.name}} {{#if selected}}selected{{/if}}>{{this.name}}</option>
        {{/each}}
      </select>
      {{!-- </div> --}}

      {{!-- <select name="type">
        <option value="good">A good</option>
        <option value="service">A service</option>
      </select> --}}
      {{!-- <div class ="searchcityinput"> --}}
        <input type="text" name="city" placeholder="City"></input>
      {{!-- </div> --}}

      <input id = "submitloop" type="image" src="https://res.cloudinary.com/dyybiq3aw/image/upload/v1601751701/project2-upload/search_1_rlbcym.png" alt="Submit" >
      {{!-- <button> <img src="https://res.cloudinary.com/dyybiq3aw/image/upload/v1601751701/project2-upload/search_1_rlbcym.png" alt="searchicon">SEARCH</button> --}}

    </form>

    <section class="categoriesdisplay">

      <div class="categoriescontainer">

        <article class="catdressing categoriesboxes">
          <a href="/posts/categories?categories=Dressing"><img src="https://res.cloudinary.com/dyybiq3aw/image/upload/v1601744997/project2-upload/dressing_lbsxgt.jpg" alt="dressingpic"></a>
          <p>DRESSING</p>
        </article>

        <article class="catservices categoriesboxes">
          <a href="/posts/categories?categories=Services"><img src="https://res.cloudinary.com/dyybiq3aw/image/upload/v1601744998/project2-upload/services_yypxvr.jpg" alt="servicepic"></a>
          <p>SERVICES</p>
        </article>

        <article class="catbooks categoriesboxes">
          <a href="/posts/categories?categories=Books%2FCDs"><img src="https://res.cloudinary.com/dyybiq3aw/image/upload/v1601744997/project2-upload/book_drm0ph.jpg" alt="bookspic"></a>
          <p>BOOKS/CDs</p>
        </article>

        <article class="catbeauty categoriesboxes">
          <a href="/posts/categories?categories=Beauty"><img src="https://res.cloudinary.com/dyybiq3aw/image/upload/v1601744997/project2-upload/beauty_istlqk.jpg" alt="beautypic"></a>
          <p>BEAUTY</p>
        </article>

        <article class="catit categoriesboxes">
          <a href="/posts/categories?categories=IT"><img src="https://res.cloudinary.com/dyybiq3aw/image/upload/v1601744997/project2-upload/it_u8k2d4.jpg" alt="itpic"></a>
          <p>IT</p>
        </article>

      </div>
    </section>
</section>

<section class ="results">
  
    <h1>Results</h1>

  <div class ="postcard">

  {{!-- <div class="column1">column 1</div> --}}
{{#if posts}}
    <ul>
    {{#each posts}}
    <a href="/posts/{{id}}">
    <li>
      
        <img src="{{this.picURL.0.path}}">
    
      <div class ="postcardtext">
        <h2>{{this.title}}</h2>
        <p>
          <a href="/posts/{{id}}">See details</a>
        </p>
        <p id = "creationdate" >Posted at: {{this.createdAt}}</p>
      </div>

        
    </li>
    </a>
    {{/each}}
    </ul>
    
    {{else}}
    <p>There is no result!</p>
    {{!-- <a href="/posts/categories">Back to categories</a> --}}
    {{/if}}


  </div>
</section>

  <div id ="endlink">
  <a href="/posts/categories">Back to all categories & posts</a>
  </div>
</div>