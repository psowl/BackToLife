<div id="show-post">
  <article>
    <img src="{{post.picURL}}" style="width: 500px;">
  </article>

  <section>
    <div>
      <h2>{{post.title}}</h2>
      <p>Numbers of flowers suggested: {{post.pointsEstimate}}</p>
      <p>Description: {{post.description}}</p>
      <a href="/posts/{{post.id}}/offer">Make an offer</a>
    </div>
    <div>
      <p>Posted by <span style="font-weight: bold;">{{userFromDb.username}}</span> at {{post.createdAt}}</p>
      <a href="/profile/{{userFromDb.id}}">See profile</a>
    </div>

    <div id="sharepost">
     <a href="/posts/{{post.id}}"></a>
    </div>    
    <p>Share this post with your friends</p>
    <button onclick="copyToClipboard('#sharepost')"> Click to copy URL : .../posts/{{{post.id}}}</button>

  </section>
</div>




