<div id="show-post">
  <article>
    <img src="{{post.picURL}}" style="width: 500px;">
  </article>

  <section>
    <div>
      <h2>{{post.title}}</h2>
      <p>Numbers of flowers suggested: {{post.pointsEstimate}}</p>
      <p>Description: {{post.description}}</p>
      <a href="/posts/{{post.id}}/offer">Make an offer</a>
    </div>
    <div>
      <p>Posted by {{userInSession.username}} at {{post.createdAt}}</p>
      <a href="/profile">See profile</a>
    </div>
  </section>
</div>




