<h1>Make an offer!!!</h1>
<h2>For: {{post.title}}</h2>
<h3>You are willing to give:</h3>
<form action="/posts/{{post.id}}/offer" method="POST">
  <p>
    <label>
      Your goods or services:
      <select name="goodToExchange">
        <option>--Select--</option>
        {{#each posts}}
        <option value="{{id}}">{{title}}</option>
        {{/each}}
      </select>
    </label>
  </p>
  <p>
    <label for="pointsEstimate">Or number of flowers:</label>
    <input type="text" name="pointsEstimate" id="pointsEstimate" placeholder="1,2,3"/>
  </p>
  <p>
    <label for="messages">Messages:</label>
    <textarea name="messages" placeholder="Your messages..."></textarea>
  </p>
  
   
  <button type="submit">Send</button>
  {{#if errorMessage}}
    <p class="error">{{errorMessage}}</p>
  {{/if}}
</form>